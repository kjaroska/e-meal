{
  "compilerOptions": {
    "outDir": "./dist",
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": true,
    "strict": true,
    "alwaysStrict": true,
    "allowJs": true,
    "checkJs": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "pretty": true,
    "target": "es6"
  },
  "lib": [
    "dom",
    "es6"
  ],
  "include": [
    "./src/*.ts"
  ],
  "exclude": [
    "*.js",
    "dist",
    "node_modules",
    "wwwroot"
  ]
}