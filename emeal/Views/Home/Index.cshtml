@using emeal.Models
@{ Layout = null; }
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>e-meal</title>
    @*CSS*@
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Encode+Sans">
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.min.css"/>
    @*CUSTOM STYLESHEET*@
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css"/>
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
            integrity="sha256-k2WSCIexGzOj3Euiig+TlR8gA0EmPjuc79OEeY5L45g=" crossorigin="anonymous"></script>
    <script type="text/javascript" src="~/Scripts/jquery-3.2.1.min.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
<div class="navbar navbar-fixed-top" id="start-page-header">
    Hello, @Html.ValueFor(model => (Session["User"] as User).Name)
</div>
<div class="container-fluid" id="start-page-items">
    <div id="start-page-items-row-left-upper">
        <a href="@Url.Action("SearchByIngredients", "Ingredient")" title="Find recipes by ingredients">
            <span class="glyphicon glyphicon-search gi-5x"></span>
        </a>
    </div>
    <div id="start-page-items-row-left-lower">
        <a href="@Url.Action("RandomRecipe", "Recipe")" title="Random recipe">
            <img src="~/Content/img/dice.png"/>
        </a>
    </div>
    <div id="start-page-items-row-right-upper">
        <a href="@Url.Action("Index", "User")" title="Profile">
            <span class="glyphicon glyphicon-user gi-5x"></span>
        </a>
    </div>
    <div id="start-page-items-row-right-lower">
        <a href="@Url.Action("Index", "Recipe")" title="Look up recipes by name">
            <span class="glyphicon glyphicon-book gi-5x"></span>
        </a>
    </div>
</div>
</body>
</html>