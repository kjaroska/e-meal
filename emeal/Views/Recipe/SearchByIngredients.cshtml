@model IEnumerable<emeal.Models.Product>

@{ ViewBag.Title = "Search by ingredients"; }

<div class="jumbotron">
    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6">
            <div class="input-group row">
                <select id="ingredient-search-input" multiple="multiple">
                    <option disabled selected>Please select ingredients to search by...</option>
                    @foreach (var product in Model)
                    {
                        <option value="@Html.ValueFor(prod => product.Id)">@Html.ValueFor(prod => product.Name)</option>
                    }

                </select>
                <button class="btn btn-success">Search</button>
            </div>
        </div>
        <div class="col-lg-3"></div>
    </div>
</div>