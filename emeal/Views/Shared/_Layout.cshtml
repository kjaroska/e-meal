<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css"/>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css"/>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("e-meal", "Index", "Recipe", new {area = ""}, new {@class = "navbar-brand"})
        </div>
        <div class="dropdown center-block">
            <button class="btn dropdown-toggle" type="button" data-toggle="dropdown" id="searchDropdown" aria-haspopup="true" aria-expanded="false">Search</button>
            <div class="dropdown-menu" aria-labelledby="searchDropdown">
                @using (Html.BeginForm("Index", "Recipe", FormMethod.Get))
                {
                    @Html.ActionLink("Search by ingredients", "SearchByIngredients", "Recipe", null, new {@class = "btn btn-success"})
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Search by name..." name="searchName" value=@ViewBag.SearchName>
                    </div>
                    <div class="dropdown-divider"></div>
                    <button type="submit" class="btn btn-default">
                        <span class="glyphicon glyphicon-search"></span>
                    </button>
                }
            </div>
        </div>

        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
            </ul>
        </div>
    </div>
</div>

<div class="container body-content">
    @RenderBody()
    <hr/>
    <footer>
        <p>&copy; 2017 - @DateTime.Now.Year ａｅｓｔｈｅｔｉｘ</p>
    </footer>
</div>

<script src="~/Scripts/jquery-3.1.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>

@*Custom scripts*@
<script src="~/Scripts/Site/IngredientFrames.js"></script>
<script src="~/Scripts/Site/StepFrames.js"></script>
<script src="~/Scripts/Site/SearchByIngredient.js"></script>
</body>
</html>