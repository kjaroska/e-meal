@model IEnumerable<emeal.Models.Recipe>

@foreach (var recipe in Model)
{
    <div id="recipe-result-@Html.ValueFor(rcp => recipe.Id)">
        <a href="@Url.Action("Details", "Recipe", new {id = Html.ValueFor(rcp => recipe.Id)})">
            <img src="@Html.ValueFor(rcp => recipe.PathToImage)" alt="Meal image"/>
            <h5>@Html.ValueFor(rcp => recipe.Name)</h5>
            <p>@Html.ValueFor(rcp => recipe.Description)</p>
        </a>
    </div>
}